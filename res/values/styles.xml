<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
   	<style name="NoTitle">
        <item name="android:windowNoTitle">true</item>
    </style>
    
   	<style name="PunishTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/punishment_bg</item>
    </style>
    
   	 <style name="KillerNumber">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="KillerIdentity">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="Custom_Dialog">
        <item name="android:windowBackground">@drawable/window_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    
    <style name="MyDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/window_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    
    <style name="AddWordDialog" parent="@android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/add_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="SpyCate">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SpyCateCount">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SpyMyWords">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="LabelTitle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/spy_noticeword_bg</item>
        <item name="android:layout_marginTop">35.0dip</item>
    </style>
    
    <style name="win_num">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="small_win_num">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

</resources>

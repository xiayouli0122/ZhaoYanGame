<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/game_options" >

    <ScrollView
        android:id="@+id/list_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:scrollbars="none" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/game_killer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/options_killer_card" />

            <ImageView
                android:id="@+id/game_spy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_toRightOf="@+id/game_killer"
                android:contentDescription="@string/app_name"
                android:src="@drawable/options_spy_card" />

            <ImageView
                android:id="@+id/game_fool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game_killer"
                android:layout_marginTop="10.0dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/options_fool_card" />

            <ImageView
                android:id="@+id/game_huopin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/game_fool"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/game_fool"
                android:contentDescription="@string/app_name"
                android:src="@drawable/options_word_card" />

            <ImageView
                android:id="@+id/game_punish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game_fool"
                android:layout_marginTop="10.0dip"
                android:contentDescription="@string/app_name"
                android:src="@drawable/options_punishment_card" />

            <ImageView
                android:id="@+id/game_wish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/game_punish"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/game_punish"
                android:contentDescription="@string/app_name"
                android:src="@drawable/options_wishes_card" />

            <ImageView
                android:id="@+id/game_nosense"
                android:layout_width="wrap_content"
                android:layout_height="70.0dip"
                android:layout_below="@+id/game_wish"
                android:background="@color/white"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/list_hide"
        android:padding="10.0dip" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/gamelist_drawable_back" />

        <ImageView
            android:id="@+id/options_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:contentDescription="@string/app_name"
             />

        <ImageView
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/gamelist_btn_help" />
    </RelativeLayout>

</RelativeLayout>
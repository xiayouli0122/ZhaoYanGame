<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhaoyan.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoTitle" >
        <activity
            android:name="com.zhaoyan.game.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhaoyan.game.IndexActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.zhaoyan.game.killer.KillerGameActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        
         <activity
            android:name="com.zhaoyan.game.punish.PunishMainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PunishTheme" >
        </activity>
        
         <activity
             android:name="com.zhaoyan.game.spy.SpyMainActivity"
             android:screenOrientation="portrait"
             android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            >
         </activity>
         
         <activity
             android:name="com.zhaoyan.game.spy.SpyGameActivity"
             android:screenOrientation="portrait"
             android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            >
         </activity>
         
         <activity
             android:name="com.zhaoyan.game.spy.SpyMyWordManager"
             android:screenOrientation="portrait"
             android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            >
         </activity>
         
         <activity
             android:name="com.zhaoyan.game.RuleHomeActivity"
             android:screenOrientation="portrait"
             android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            >
         </activity>
         
         <activity
             android:name="com.zhaoyan.game.SpyRuleActivity"
             android:screenOrientation="portrait"
             android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            >
         </activity>
         
         <provider
            android:name="com.zhaoyan.game.db.DbProvider"
            android:authorities="com.zhaoyan.game.db.dbprovider" >
        </provider>
    </application>

</manifest>